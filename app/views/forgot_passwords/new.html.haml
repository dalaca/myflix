%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      =form_tag forgot_passwords_path do
        %header
          %h1 Reset Password
          %p We will send you an email to reset your password
        .form-group
          =label_tag :email, "Email Address"
          .row.col-sm-4
          =email_field_tag :email, nil, class: "form-control"
        .form-group.action
          =submit_tag "Send Email", class: "btn btn-default"